---
import Image from 'astro/components/Image.astro'
import type { IPerson } from '../types'

interface Props {
    person: IPerson,
    className: string
    index: number
}

const { person, className, index } = Astro.props

---

<Image loading="eager" width={48} height={48} style={`translate: -${index * 10}px`} class={`${className} aspect-square rounded-full`} src={person.avatar} alt={person.name}/>