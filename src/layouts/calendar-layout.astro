---
import { ViewTransitions } from "astro:transitions";
import CalendarHeader from "../headers/ui/CalendarHeader.astro";
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<style>
			html,
			body {
				font-family: system-ui;
				margin: 0;
			}
			body {
				padding: 2rem;
			}
		</style>
		<ViewTransitions />
	</head>
	<body class="w-screen m-auto overflow-hidden ">
		<main class="flex m-auto  gap-8 max-w-xl flex-col">
			<CalendarHeader />
				<slot />
			
		</main>
	</body>
</html>

<style is:global>
	
:root {
  --sb-track-color: #f1f5f7;
  --sb-thumb-color: #575f5b;
  --sb-size: none;
}

*::-webkit-scrollbar {
  width: var(--sb-size);
  visibility: hidden;
  height: var(var(--sb-size));
}

*::-webkit-scrollbar-track {
  background: var(--sb-track-color);
  visibility: hidden;
  border-radius: 1px;
}

*::-webkit-scrollbar-thumb {
  background: var(--sb-thumb-color);
  visibility: hidden;
  border-radius: 1px;
  
}

@supports not selector(::-webkit-scrollbar) {
  * {
    scrollbar-color: var(--sb-thumb-color)
                     var(--sb-track-color);
  }
}
	article {
		transition: border-radius height  0.6s ;
		interpolate-size: allow-keywords;
	}
	@keyframes wide {
		from {
			height: 96px ;
		}
		to {
			height: 100%;
		}	
	}
</style>
