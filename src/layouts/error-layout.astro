---
import { ViewTransitions } from "astro:transitions";
import CalendarHeader from "../headers/ui/CalendarHeader.astro";
const anim = {
  old: {
    name: 'slide-in',
	delay: 1,
	duration: 2,
	easing: 'ease-out',
    direction: 'reverse',

  },
  new: {
    name: 'slide-in',
	duration: 2,
	delay: 1,
	easing: 'ease',
    direction: 'forward',
  },
};

const customTransition = {
  forwards: anim,
  backwards: anim,
};

---

<html  lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<style>
			html,
			body {
				font-family: system-ui;
				margin: 0;
			}
			body {
				padding: 2rem;
			}
		</style>
		<ViewTransitions />
	</head>
	<body class="w-screen m-auto min-w-[530px] overflow-clip ">
		<main class="flex m-auto  gap-10 max-w-xl flex-col">
			<fragment transition:animate={customTransition} transition:name="cumple">
					<slot />
                   
			</fragment>
			
		</main>
	</body>
</html>

<style is:global>
	article {
		transition: border-radius height  0.6s ;
		interpolate-size: allow-keywords;
	}
	@keyframes wide {
		from {
			height: 96px ;
		}
		to {
			height: 100%;
		}	
	}
	@keyframes myAnim {
	0% {
		transform: scale(0);
		transform-origin: 100% 50%;
	}

	100% {
		transform: scale(1);
		transform-origin: 100% 50%;
	}
}
</style>
